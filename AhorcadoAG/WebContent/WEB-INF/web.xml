<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <display-name>Hangman Game - Bluemix</display-name>
  <servlet>
		<servlet-name>JAX-RS Servlet</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
		<init-param>
			<param-name>applicationConfigLocation</param-name>
			<param-value>/WEB-INF/resources</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
	    <servlet-name>LoadIndex</servlet-name>
	    <servlet-class>com.ibm.cloudoe.servlets.LoadIndex</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>LoadGame</servlet-name>
	    <servlet-class>com.ibm.cloudoe.servlets.LoadGame</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JAX-RS Servlet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>LoadIndex</servlet-name>
	    <url-pattern>/play.do</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
	    <servlet-name>LoadGame</servlet-name>
	    <url-pattern>/game.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
	    <welcome-file>play.do</welcome-file>
	</welcome-file-list>

</web-app>